<p id="notice"><%= notice %></p>

<div class='row'>
  <div class='col-md-6'>
    <h1>Constipation Logs</h1>

    <% if dev_signed_in? %>
      <%= link_to 'New Log', new_log_path, class: 'btn btn-default' %>
      <%= link_to destroy_dev_session_path, class: 'btn btn-default', method: :delete do %>
	Sign Out
      <% end %>
    <% else %>
      <%= link_to 'Sign In', new_dev_session_path, class: 'btn btn-default' %>
    <% end %>

  </div>
</div>
<hr/>

<div class='col-md-10'>
  <table class='table'>
    <thead>
      <tr>
	<th>Title</th>
	<th>Entry</th>
	<th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @logs.reverse.each do |log| %>
	<tr>
          <td><%= log.title %></td>
          <td><%= log.entry %></td>
          <td><%= link_to 'Show', log %></td>
	  <% if dev_signed_in? %>
            <td><%= link_to 'Edit', edit_log_path(log) %></td>
            <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  <% end %>
	</tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>


