<p id="notice"><%= notice %></p>

<div class='row'>
  <div class='col-md-6'>
    <%= render 'layouts/header' %>
  </div>
</div>
<hr/>

<div class='col-md-10'>
  <table class='table'>
    <thead>
      <tr>
	<th>Title</th>
	<th>Entry</th>
	<th colspan="1"></th>
	<th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @logs.reverse.each do |log| %>
	<tr>
          <td><%= log.title %></td>
          <td><%= markdown(log.entry).html_safe %></td>
	  <td><%= image_tag log.image.url, class: 'img-med' %></td>
          <td><%= link_to 'Show', log %></td>
	  <% if dev_signed_in? %>
            <td><%= link_to 'Edit', edit_log_path(log) %></td>
            <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  <% end %>
	</tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>


