<fieldset>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :info %>
  <%= f.text_field :info %>

  <%= f.file_field :gamefile, required: true %>

  <% if f.object.persisted? %>
    <%= f.check_box :_destroy %>
    <%= f.label :_destroy, "Destroy" %>
  <% end %>

  <%= f.hidden_field :_destroy %>
  <%= link_to "Cancel", '#', class: "remove_fields" %>
</fieldset>
